{
  "compileOnSave": false,
  "compilerOptions": {
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@config": ["config"],
      "@database": ["database"],
      "@models/*": ["models/*"],
      "@routes/*": ["routes/*"],
      "@controllers/*": ["controllers/*"],
      "@services/*": ["services/*"],
      "@dao/*": ["dao/*"],
      "@interfaces/*": ["interfaces/*"],
      "@typings/*": ["typings/*"],
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}